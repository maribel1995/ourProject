<div class="container">
    <h1>Products</h1>
    <hr>
    <div class="d-flex p-2 flex-wrap">
        {{#each products}}
        
            <div class="card m-4" style="width: 12rem;">
                <div class="card-img-top"
                    style="background-image:url({{this.images.[0]}}); background-size: cover; width: 12rem; height: 120px;">
                </div>

                <div class="card-body">
                   <a href="/products/edit/{{this._id}}"><p class="card-text">Editar</p></a>
                   <a href="/products/perfil/{{this._id}}"> <p class="card-text">{{this.name}}</p></a>
                    <p class="card-text"><a href="#perfilOwner">Owner</a></p>
                </div>
            </div>
        
        {{/each}}
    </div>
</div>